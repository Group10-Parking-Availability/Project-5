<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/round">

    <Button
        android:id="@+id/sendButton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailsEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="110dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="112dp"
        android:text="Send"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#36683D" />

    <TextView
        android:id="@+id/contactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="-1dp"
        android:lineSpacingExtra="10dp"
        android:text="For Direct Contact Please Use This Number: 704-687-0161"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#36683D"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/issueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issueText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:hint="Enter Issue"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/issueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-1dp"
        android:text="What Is The Issue?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#36683D" />

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issueEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="23dp"
        android:text="Provide More Details Please:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#36683D" />

    <EditText
        android:id="@+id/detailsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailsText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:hint="Enter Details"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

</RelativeLayout>