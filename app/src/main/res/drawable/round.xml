<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Padding -->
    <item android:left="4dp"
        android:right="4dp"
        android:top="6dp"
        android:bottom="6dp">
        <!-- Main Shape -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="35dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>
    <item android:left="4dp"
        android:right="4dp"
        android:top="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/background_light" />
            <corners android:radius="35dp"/>
            <stroke
                android:width="2dp"
                android:color="#C3C3C3" /> <!-- Adjust stroke color as needed -->
        </shape>
    </item>
</layer-list>