<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Padding -->
    <item android:left="6dp"
        android:right="6dp"
        android:top="8dp"
        android:bottom="8dp">
        <!-- Main Shape -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>
    <item android:left="6dp"
        android:right="6dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp"/>
            <stroke
                android:width="2dp"
                android:color="#C3C3C3" /> <!-- Adjust stroke color as needed -->
        </shape>
    </item>
</layer-list>